void splash(){
  int light = analogRead(Light_PIN);
  Serial.println(light);
  display.clearDisplay();
  display.setTextColor(WHITE);
  display.setTextSize(2);
  display.setCursor(0,10);
  display.print("Light:");
  display.setTextSize(2);
  display.setCursor(70,10);
  display.print(light);
  display.display();
}

